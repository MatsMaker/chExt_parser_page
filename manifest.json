{
  "manifest_version": 2,

  "name": "Upwork pages parser",
  "description": "upwork pages parser",
  "version": "0.01",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon1.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.upwork.com/*/*"],
      "js": ["client.js"]
    }
  ],
  "icons" : {
     "16": "ico-codeview.png",
     "128":  "icon0.png"
   },
  "permissions": [
    "tabs",
    "contextMenus",
    "https://www.upwork.com/*/*"
  ]
}
